<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/findtext_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="12dp"
        android:fontFamily="@font/leaguebold"
        android:text="Find Text"
        android:textSize="16sp">

    </TextView>

    <EditText
        android:id="@+id/findtext_edtmain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/findtext_title"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:layout_toStartOf="@id/findtext_btnnext"
        android:hint="Input text here..."
        android:textSize="16sp">

    </EditText>

    <Button
        android:layout_marginEnd="12dp"
        android:layout_below="@id/findtext_title"
        android:id="@+id/findtext_btnnext"
        android:layout_alignParentEnd="true"
        android:textAllCaps="false"
        android:text="Next"
        android:layout_width="90dp"
        android:layout_height="40dp">

    </Button>


</RelativeLayout>