<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AuthActivity">

    <ImageView
        android:id="@+id/main_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="12dp">

    </ImageView>

    <TextView
        android:id="@+id/main_tvlogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_img"
        android:text="Login dulu dong ngebtod"
        android:textAlignment="center"
        android:textSize="24sp">

    </TextView>

    <EditText
        android:id="@+id/main_edtin"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/main_tvlogin"
        android:layout_margin="8dp"
        android:hint="PIN..."
        android:textAlignment="center"
        android:textSize="22sp">

    </EditText>

    <Button
        android:id="@+id/main_btnlogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_edtin"
        android:layout_margin="8dp"
        android:text="Login">

    </Button>


</RelativeLayout>