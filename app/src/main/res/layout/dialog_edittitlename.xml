<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/edittitle_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="12dp"
        android:fontFamily="@font/leaguebold"
        android:text="Edit Title"
        android:textSize="16sp">

    </TextView>

    <EditText
        android:id="@+id/edittitle_edtmain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edittitle_title"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:hint="Input text here..."
        android:textSize="16sp">

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/edittitle_btnsave"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:textSize="16sp"
        android:layout_below="@id/edittitle_edtmain"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="12dp"
        android:backgroundTint="@color/color5"
        android:text="Save"
        android:textAllCaps="false">

    </Button>


</RelativeLayout>